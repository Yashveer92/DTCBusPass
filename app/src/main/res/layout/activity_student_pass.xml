<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".SelectPass.GeneralPassActivity">


    <include layout="@layout/buy_bus_pass_toolbar" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background4" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/darkgray"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:fontFamily="@font/gotham_book"
                            android:hint="First Name"
                            android:inputType="text"
                            android:paddingTop="12dp"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/background4" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"

                        android:textColorHint="@color/darkgray"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:fontFamily="@font/gotham_book"
                            android:hint="Last Name"
                            android:inputType="text"
                            android:paddingTop="12dp"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/background4" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"

                        android:textColorHint="@color/darkgray"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/email_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:fontFamily="@font/gotham_book"
                            android:hint="Email Id"
                            android:inputType="textEmailAddress"
                            android:paddingTop="12dp"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/background4" />


                    <TextView
                        android:id="@+id/dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_book"
                        android:hint="Date of Birth"
                        android:textColorHint="@color/darkgray"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/background4" />


                    <Spinner
                        android:id="@+id/choose_gender"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="-7dp"
                        android:background="@color/background_spinner"
                        android:spinnerMode="dropdown" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/background4" />


                    <LinearLayout
                        android:id="@+id/Fmcamera"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp">


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="9">


                                <ImageView
                                    android:id="@+id/add_photograph_student_pass_btn"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:onClick="onAddReportButton"
                                    android:paddingLeft="-5dp"
                                    android:src="@drawable/add_doc_photo_btn" />

                                <TextView
                                    android:id="@+id/photograph_student_pass_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/gotham_book"
                                    android:text="Photograph"
                                    android:textColor="@color/darkgray"
                                    android:textSize="16sp" />
                            </LinearLayout>


                            <TextView
                                android:id="@+id/remove_photograph_student_pass"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/gotham_book"
                                android:text="remove"
                                android:textColor="@color/mek_red"
                                android:textSize="8sp"
                                android:visibility="gone" />

                        </LinearLayout>


                        <FrameLayout
                            android:id="@+id/rv_imagevendorpickup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/frame_rect_02">

                            <ImageView
                                android:id="@+id/photograph_img_vu_student_pass"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:padding="1dp"
                                android:scaleType="fitStart" />


                        </FrameLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp">


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="9">


                                <ImageView
                                    android:id="@+id/add_addhar_student_pass_btn"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:onClick="onAddReportButton"
                                    android:paddingLeft="-5dp"
                                    android:src="@drawable/add_doc_photo_btn" />

                                <TextView
                                    android:id="@+id/addharcard_student_pass_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/gotham_book"
                                    android:text="AdharCard"
                                    android:textColor="@color/darkgray"
                                    android:textSize="16sp" />
                            </LinearLayout>


                            <TextView
                                android:id="@+id/remove_aadhar_student_pass"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/gotham_book"
                                android:text="remove"
                                android:textColor="@color/mek_red"
                                android:textSize="8sp"
                                android:visibility="gone" />

                        </LinearLayout>


                        <FrameLayout
                            android:id="@+id/rv_imagevendorpickup2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/frame_rect_02">

                            <ImageView
                                android:id="@+id/addharCard_img_vu_student_pass"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:padding="1dp"
                                android:scaleType="fitStart" />


                        </FrameLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/background4" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp">


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="9">


                                <ImageView
                                    android:id="@+id/add_student_id_student_pass_btn"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:onClick="onAddReportButton"
                                    android:paddingLeft="-5dp"
                                    android:src="@drawable/add_doc_photo_btn" />

                                <TextView
                                    android:id="@+id/student_id_student_pass_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/gotham_book"
                                    android:text="Student Id"
                                    android:textColor="@color/darkgray"
                                    android:textSize="16sp" />
                            </LinearLayout>


                            <TextView
                                android:id="@+id/remove_student_id"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/gotham_book"
                                android:text="remove"
                                android:textColor="@color/mek_red"
                                android:textSize="8sp"
                                android:visibility="gone" />

                        </LinearLayout>


                        <FrameLayout
                            android:id="@+id/rv_imagevendorpickup3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/frame_rect_02">

                            <ImageView
                                android:id="@+id/student_id_img_vu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:padding="1dp"
                                android:scaleType="fitStart" />


                        </FrameLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp">


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="9">


                                <ImageView
                                    android:id="@+id/add_student_verification_letter_btn"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:onClick="onAddReportButton"
                                    android:paddingLeft="-5dp"
                                    android:src="@drawable/add_doc_photo_btn" />

                                <TextView
                                    android:id="@+id/student_verification_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/gotham_book"
                                    android:text="Verification Letter"
                                    android:textColor="@color/darkgray"
                                    android:textSize="16sp" />
                            </LinearLayout>


                            <TextView
                                android:id="@+id/remove_student_vrification_letter"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/gotham_book"
                                android:text="remove"
                                android:textColor="@color/mek_red"
                                android:textSize="8sp"
                                android:visibility="gone" />

                        </LinearLayout>


                        <FrameLayout
                            android:id="@+id/rv_imagevendorpickup4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/frame_rect_02">

                            <ImageView
                                android:id="@+id/student_verification_img_vu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:padding="1dp"
                                android:scaleType="fitStart" />


                        </FrameLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/background4" />


                    <Button
                        android:id="@+id/login_to_app"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/login_custom_btn"
                        android:text="Proceed"
                        android:fontFamily="@font/montserrat_medium"
                        android:textSize="12sp"
                        android:textColor="@color/white" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>


