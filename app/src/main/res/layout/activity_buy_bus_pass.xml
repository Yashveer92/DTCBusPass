<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BuyBusPassActivity">


    <include layout="@layout/buy_bus_pass_toolbar" />


   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:textSize="12sp"
                            android:textColor="@color/darkgray"
                            android:textStyle="bold"
                            android:text="Select Pass Duration" />

                        <TextView
                            android:id="@+id/change_pass_duration_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@color/link_color"
                            android:text="Change" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/selct_pass_duration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textColor="@color/black"
                            android:text="One Month" />

                    </LinearLayout>


                </LinearLayout>


                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/darkgray"
                            android:text="Select Start Date" />

                        <TextView
                            android:id="@+id/change_date_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:gravity="center"
                            android:textColor="@color/link_color"
                            android:textSize="12sp"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="Change" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/display_date_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textColor="@color/black"
                            android:text="10 sep 2019" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/darkgray"
            android:text="Select Pass" />


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rect_background"
                android:orientation="vertical">


                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">




                    <RadioButton
                        android:id="@+id/general_radio_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bu_bus_pass_margin_left"
                        android:paddingTop="@dimen/buy_bu_pass_padding_top"
                        android:paddingBottom="@dimen/buy_bu_pass_padding_bottom"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="15sp"
                        android:text="General" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="-34dp"
                        android:layout_marginRight="@dimen/bu_bus_pass_margin_right"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/buy_bu_pass_padding_bottom">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/rupees_asset"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="4dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="800"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/montserrat_semi_bold"


                            />


                    </LinearLayout>

                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/background4" />

                    <RadioButton
                        android:id="@+id/student_radio_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bu_bus_pass_margin_left"
                        android:paddingTop="@dimen/buy_bu_pass_padding_top"
                        android:paddingBottom="@dimen/buy_bu_pass_padding_bottom"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="15sp"
                        android:text="Student" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="-34dp"
                        android:layout_marginRight="@dimen/bu_bus_pass_margin_right"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/buy_bu_pass_padding_bottom">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/rupees_asset"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="4dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/montserrat_semi_bold"
                            />


                    </LinearLayout>



                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/background4" />


                    <RadioButton
                        android:id="@+id/senr_citizen_radio_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bu_bus_pass_margin_left"
                        android:paddingTop="@dimen/buy_bu_pass_padding_top"
                        android:paddingBottom="@dimen/buy_bu_pass_padding_bottom"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="15sp"
                        android:text="Senior Citizen" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="-34dp"
                        android:layout_marginRight="@dimen/bu_bus_pass_margin_right"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/buy_bu_pass_padding_bottom">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/rupees_asset"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="4dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/montserrat_semi_bold"
                            />


                    </LinearLayout>

                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/background4" />


                    <RadioButton
                        android:id="@+id/disable_radio_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bu_bus_pass_margin_left"
                        android:paddingTop="@dimen/buy_bu_pass_padding_top"
                        android:paddingBottom="@dimen/buy_bu_pass_padding_bottom"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="15sp"
                        android:text="Disabled" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="-34dp"
                        android:layout_marginRight="@dimen/bu_bus_pass_margin_right"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/buy_bu_pass_padding_bottom">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="4dp"
                            android:src="@drawable/rupees_asset" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="200"
                            android:textColor="@color/black"
                            android:textSize="15sp" />


                    </LinearLayout>





                </RadioGroup>


            </LinearLayout>




        </androidx.cardview.widget.CardView>




    </LinearLayout>


<!--
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:background="@drawable/login_custom_btn"
            android:text="Next"/>-->

    </LinearLayout>

   </ScrollView>



</LinearLayout>