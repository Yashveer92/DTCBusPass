<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RenewPass.RenewBussPass">


    <include layout="@layout/renew_pass_toolbar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background4" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expiring Soon"
            android:textSize="16sp"
            android:padding="2dp"
            android:textColor="@color/yellow2"
            android:fontFamily="@font/montserrat_semi_bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:padding="2dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="Renew your pass now and validate in the bus tomorrow.No need to go to depot." />



    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:layout_gravity="start"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="8dp"
            android:text="Pass No."
            android:textColor="@color/app_caption_dark_grey"
            android:textSize="13sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:layout_gravity="end"
            android:gravity="start"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="8dp"
            android:text=" 008575286123"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:paddingTop="2dp"
            android:gravity="center_horizontal">



        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/dtclogo"/>

        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:layout_gravity="start"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="8dp"
            android:text="Name"
            android:textColor="@color/app_caption_dark_grey"
            android:textSize="13sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:layout_gravity="end"
            android:gravity="start"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="8dp"
            android:textStyle="bold"

            android:text=" Yashveer"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:gravity="center_horizontal">




        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:layout_gravity="start"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="8dp"
            android:text="Valid Till"
            android:textColor="@color/app_caption_dark_grey"
            android:textSize="13sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:layout_gravity="end"
            android:gravity="start"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="8dp"
            android:text=" 05 Nov"
            android:textStyle="bold"

            android:textColor="@color/black"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:gravity="center_horizontal">





        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:layout_gravity="start"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="8dp"
            android:text="Pass Type"
            android:textColor="@color/app_caption_dark_grey"
            android:textSize="13sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:layout_gravity="end"
            android:gravity="start"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="8dp"
            android:text=" General"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:gravity="center_horizontal">





        </LinearLayout>



    </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="14dp"
        android:paddingBottom="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@color/app_caption_dark_grey"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="Select your plan"/>
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="8dp"
            android:text="Monthly"
            android:textColor="@color/black"
            android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:gravity="left|center_vertical"
            android:paddingTop="5dp"
            android:layout_marginRight="@dimen/bu_bus_pass_margin_right"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/buy_bu_pass_padding_bottom">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rupees_asset"
                android:paddingTop="10dp"
                android:layout_marginRight="4dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="800"
                android:textSize="16sp"
                android:paddingTop="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_semi_bold"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/arrow_right_black"/>


        </LinearLayout>





    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/gradient_bottom"
                android:scaleY=".5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:padding="8dp"
                    android:text="Quartly"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:paddingTop="5dp"
                android:gravity="left|center_vertical"
                android:layout_marginRight="@dimen/bu_bus_pass_margin_right"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/buy_bu_pass_padding_bottom">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rupees_asset"
                    android:paddingTop="10dp"
                    android:layout_marginRight="4dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3000"
                    android:textSize="16sp"
                    android:paddingTop="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semi_bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/arrow_right_black"/>


            </LinearLayout>


        </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>