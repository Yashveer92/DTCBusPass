<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/gotham_boook"
            android:padding="8dp"
            android:text="28th oct, 2019"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/montserrat_medium1"
            android:padding="8dp"
            android:text="10:30 a.m"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_gravity="left"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="8dp"
            android:text="Application Id no."
            android:textColor="@color/black"
            android:textSize="13sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_gravity="end"
            android:gravity="center_horizontal"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="8dp"
            android:text=" 008575286123"
            android:textColor="@color/black"
            android:textSize="13sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/gradient_bottom"
        android:scaleY=".5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:weightSum="2">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingLeft="8dp"
                android:text="Applying Date"
                android:textColor="@color/app_caption_dark_grey"
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="8dp"
            android:text="5th Nov, 2019"
            android:gravity="center_horizontal"
            android:textColor="@color/app_caption_dark_grey"
            android:textSize="13sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/gradient_bottom"
        android:scaleY=".5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:text="Pass Type"
                android:textColor="@color/app_caption_dark_grey"
                android:textSize="13sp" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight=".5"
                android:gravity="center_horizontal"
                android:fontFamily="@font/montserrat_semibold"
                android:padding="8dp"
                android:text="Student"
                android:textColor="@color/app_caption_dark_grey"
                android:textSize="13sp" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="8dp"
            android:text="Transaction"
            android:textColor="@color/app_caption_dark_grey"
            android:textSize="13sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:gravity="left|center_vertical"
                android:layout_marginRight="@dimen/bu_bus_pass_margin_right"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/buy_bu_pass_padding_bottom">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rupees_asset"
                    android:paddingTop="10dp"
                    android:layout_marginRight="4dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:textSize="13sp"
                    android:paddingTop="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/app_caption_dark_grey"
                    android:fontFamily="@font/montserrat_semi_bold"


                    />


            </LinearLayout>





        </LinearLayout>



    </LinearLayout>

